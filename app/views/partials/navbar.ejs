<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="p-2 ms-1 navbar-brand" href="#">
            <img src="/images/icon.png" width="30" height="30" alt="">Covid19</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon ml-auto"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">

                <li class="nav-item ">
                    <a class=" nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Services</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">Gallery</a>
                </li>

                <% if( user !=null ){ %>
                    <li class="nav-item  border-box">
                        <a class="nav-link text-white" href="#" data-bs-toggle="modal"
                            data-bs-target="#userProfileModal"><strong>Hi</strong>
                            <%= user.first_name +" "+ user.last_name %></a> 
                    </li>
                    <li class=" nav-item ml-auto border-box bor bg-danger">
                      <a id="logout-link" data-email="<%= user.email %>" class="nav-link text-white rounded-pill" href="/logout"><strong>Logout</strong></a>
                    </li>
                    <%}%>
            </ul>
        </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="userProfileModal" tabindex="-1" aria-labelledby="userProfileModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userProfileModalLabel">User Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul>
                        <li class="ml-auto"><strong> NAME :
                                <%=user.first_name +" "+ user.middle_name + " "+ user.last_name %></strong> 
                        </li>
                        <li class=" ml-auto"><strong> EMAIL :
                                        <%=user.email %>
                                    </strong>
                        </li>
                        <li class="ml-auto"><strong> Address :</strong>
                            <%= user.address %>

                        </li>
                        <li class="ml-auto"><strong> Blood Group :</strong>
                            <p class="text-light px-2 mt-0 bg-danger rounded-pill d-inline">
                                <%= user.blood_group %>
                            </p>

                        </li>
                        <li class="ml-auto"><strong> AGE :
                                <%= user.age %>
                            </strong>
                        </li>
                        <li class="ml-auto"><strong> VACCINATION CERTIFICATE ID :</strong>
                            <%= user.vaccination_certificate_id ? user.vaccination_certificate_id : 'Not yet Vaccinated'
                                %>

                        </li>
                    </ul>
                </div>
                <div class=" modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- Additional buttons or actions if needed -->
                </div>
            </div>
        </div>
    </div>


</header>
<script src="/socket.io/socket.io.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
      var logoutLink = document.getElementById('logout-link');
      var userEmail = logoutLink.getAttribute('data-email');
      const socket = io();
      logoutLink.addEventListener('click', function(event) { 
          console.log('Inside event',userEmail)
          event.preventDefault(); // Prevent the default link behavior
          socket.emit('logoutSuccess', userEmail); // Emit your custom event
          window.location.href = logoutLink.getAttribute('href'); // Redirect to the logout route
      });
  });
  </script>