<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'>
    </link>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<style>
    .main {
        margin: 10px;
        padding: 20px;
        background-color: antiquewhite;
    }

    .main section {
        margin-top: 10px;
        padding: 20px;
    }

    .main section:nth-child(1) {
        background-color: rgb(209, 178, 238);
    }

    .main section:nth-child(2) {
        background-color: rgb(148, 245, 245);
    }
</style>

<body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <%- include('partials/navbar') %>
        <div class="main">

            <section class="rounded-5">
                <div class="container">
                    <h1 class="text-center text-capitalize pt-5">Services</h1>
                    <hr class="w-25 mx-auto pt-5">

                    <div class="row text-center mb-5">
                        <div class="col-lg-4 col-md-4 col-12">
                            <div class="card">
                                <img class="card-img-top img-fluid" src="/images/7.jpg" class="image-fluid"
                                    alt="Card image">
                                <div class="card-body">
                                    <h4 class="card-title">Prescriptions</h4>
                                    <p class="card-text">Medicine Available Here</p>
                                    <a href="#" class="btn btn-primary">See More</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-4 col-12">
                            <div class="card">
                                <img class="card-img-top img-fluid" src="/images/8.jpg" class="image-fluid"
                                    alt="Card image">
                                <div class="card-body">
                                    <h4 class="card-title">Dr. Emma Watson</h4>
                                    <p class="card-text">Physician</p>
                                    <a href="#" class="btn btn-primary">See Profile</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-4 col-12">
                            <div class="card">
                                <img class="card-img-top img-fluid" src="/images/9.jpg" class="image-fluid"
                                    alt="Card image">
                                <div class="card-body">
                                    <h4 class="card-title">Prevention</h4>
                                    <p class="card-text">Searching..... specific medicine</p>
                                    <a href="#" class="btn btn-primary">See More</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>


            <section class="mt-2 rounded-5">
                <div class="container">
                    <h1 class="text-center text-capitalize pt-5">UPGRADE</h1>
                    <hr class="w-25 mx-auto pt-5">

                    <div class="row text-center mb-5">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="card m-4">
                                <h5 class="card-title my-2 py-3">Profile Details</h5>
                                <div class="card-body">
                                    <p class="card-title">You can Update your details</p>
                                    <button class="btn btn-primary" id="updateDetails">Click Here</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 mb-5">
                            <div class="card m-4">
                                <h5 class="card-title my-2 py-3">Vaccination Details</h5>
                                <div class="card-body">
                                    <p class="card-text">You can View Your Vaccination Details</p>
                                    <button class="btn btn-primary" id="showDetailsButton"> See Details </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>

            <!-- Modal -->
            <div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="userDetailsModalLabel">User Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Blood Group:</strong> <span id="bloodGroup"></span></p>
                            <p><strong>Vaccine ID:</strong> <span id="vaccineId"></span></p>
                            <p><strong>Vaccine Date:</strong> <span id="vaccineDate"></span></p>
                            <p><strong>First Vaccination City:</strong> <span id="city1"></span></p>
                            <p><strong>Second Vaccination City:</strong> <span id="city2"></span></p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <%- include('partials/footer') %>

            <script>
                $(document).ready(function () {
                    $('#showDetailsButton').click(function () {
                        // Assuming userDetails is an object containing the user's details
                        
                        //Ajax call

                        $('#bloodGroup').text(userDetails.bloodGroup);
                        $('#vaccineId').text(userDetails.vaccineId);
                        $('#vaccineDate').text(userDetails.vaccineDate);
                        $('#city1').text(userDetails.city1);
                        $('#city2').text(userDetails.city2);

                        $('#userDetailsModal').modal('show');
                    });
                })
            </script>

</html>